<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>user-registration</servlet-name>
        <jsp-file>/user/registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>user-registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>user-registration-process</servlet-name>
        <jsp-file>/user/registration-process.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>user-registration-process</servlet-name>
        <url-pattern>/registration-process</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>user-login</servlet-name>
        <jsp-file>/user/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>user-login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
</web-app>